<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp">

    <ImageView
        android:id="@+id/slideDelete"
        android:layout_width="72dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="72dp"
        android:height="48dp"
        android:background="@android:color/holo_red_light"
        app:srcCompat="@drawable/ic_delete_small" />

    <ImageView
        android:id="@+id/slideSeed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:height="24dp"
        android:background="@android:color/holo_red_dark"
        android:gravity="center"
        android:text="" />
    <ImageView
        android:id="@+id/slideEdit"
        android:layout_width="72dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:height="48dp"
        android:background="@android:color/holo_blue_light"
        app:srcCompat="@drawable/ic_edit_small" />

    <LinearLayout
        android:id="@+id/itemLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:orientation="horizontal">

        <Space
            android:id="@+id/indentation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" />

        <FrameLayout
            android:id="@+id/itemFrameLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/nodeToggle"
                android:layout_width="36dp"
                android:layout_height="24dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ic_right" />

            <TextView
                android:id="@+id/nodeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="22dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorBlack"
                android:text="TextView"
                android:textSize="18sp" />


            <View
                android:id="@+id/leftView"
                android:layout_width="56dp"
                android:layout_height="48dp"
                android:layout_marginStart="0dp" />

            <View
                android:id="@+id/middleView"
                android:layout_width="44dp"
                android:layout_height="48dp"
                android:layout_marginStart="40dp" />

            <View
                android:id="@+id/rightView"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="86dp" />

        </FrameLayout>

    </LinearLayout>
</RelativeLayout>