<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="0dp">
    <ImageView
        android:id="@+id/slideDelete"
        android:layout_width="72dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:height="48dp"
        android:background="@android:color/holo_red_dark"
        app:srcCompat="@drawable/ic_delete_small" />
    <ImageView
        android:id="@+id/slideEdit"
        android:layout_width="72dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:height="48dp"
        android:background="@android:color/holo_red_dark"
        app:srcCompat="@drawable/ic_edit_small" />
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/itemLinearLayout"

                  android:orientation="horizontal"
                  android:background="#eeeeee">
        <Space
                android:id="@+id/indentation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="24dp"
                android:layout_height="48dp"
                android:id="@+id/progressBar"
                android:layout_marginEnd="5dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:ems="10"
                android:id="@+id/progressNodeText" android:layout_weight="1" tools:text="node-value-str" android:textSize="18sp"/>
    </LinearLayout>

</RelativeLayout>

